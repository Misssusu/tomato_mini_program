.error-tip {
  height: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.tip-message {
  margin-top: 80rpx;
}
.login-btn button {
  color: #fff;
  width: 360rpx;
  height: 80rpx;
  border-radius: 16rpx;
  font-size: 26rpx;
  line-height: 80rpx;
  margin: 0 auto;
  opacity: 0.9;
  border: none;
  background: linear-gradient(to right,#EF9B75,#F6705A);
  box-shadow: 0px 11px 32px 0px rgba(246, 112, 90, 0.30);
}
