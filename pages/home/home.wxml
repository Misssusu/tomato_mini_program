<view class="home-wrapper">
  <scroll-view class="list-wrapper" scroll-y="true">
    <view class="item" wx:for="{{lists}}" wx:for-item="item" wx:key="item.id">
      <view class="select"></view>
      <text class="item-message">{{item.text}}</text>
    </view>
  </scroll-view>
  <view class="line"></view>
  <view class="button-wrapper">
    <g-button text="创建任务" bindshowPopup="showPopup"></g-button>
  </view>
  <view class="clock-wrapper">
    <g-clock message="点击开始"></g-clock>
  </view>
  <g-pop-up bindconfirm="confirm" bindcancel="cancel" placeholder="理由" wx:if="{{visibile}}"></g-pop-up>
</view>