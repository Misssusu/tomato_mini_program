.popup-message-wrapper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.2);
  z-index: 1;
  box-sizing: border-box;
}
.popup-message {
  width: 640rpx;
  background: #fff;
  border-radius: 20rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  padding: 26rpx 20rpx;
}
.tip-message {
  text-align: center;
  padding-bottom: 30rpx;
  border-bottom: 3rpx solid #F6705A;
}
.tip-1 {
  padding: 20rpx;
}
.tip-2 {
  padding: 25rpx;
}
.btns {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}
.btns button {
  border-radius: unset;
}
.btns button:hover {opacity: 0.9}
.btns button:after {border: none}
.confirm {
  color: #F6705A;
}
.confirm,.cancel {
  background: #fff;
  flex: 1;
  text-align: center;
}
.cancel {
  border-left: 1px solid #F6705A;
}
.btns .hoverActive {
  font-weight: bold;
}
